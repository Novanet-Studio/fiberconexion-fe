---
import Base from "@layouts/Base.astro";
import Banner from "@layouts/components/Banner.astro";
import KeyFeatures from "@layouts/components/KeyFeatures.astro";
import UsersAccess from "@layouts/components/UsersAccess.astro";
import AdditionalServices from "@layouts/components/AdditionalServices.astro";
import { getEntryBySlug } from "astro:content";
import Prominent from "@components/Prominent.astro";
import Gallery from "@components/Gallery.astro";
import Contact from "@components/Contact.astro";
import CoverageAreas from "@components/CoverageAreas.astro";

const homepage = await getEntryBySlug("homepage", "index");
const { banner, key_features, users_access, prominent, gallery, additional_services, coverage_areas, service, testimonial } = homepage.data;
---

<Base>
  <!-- banner -->
  <Banner banner={banner} />
  <!-- key features -->
  <KeyFeatures key_features={key_features} />
  <!-- Users Access -->
  <UsersAccess users_access={users_access} />
  <!-- Prominent -->
  <Prominent prominent={prominent} />
  <!-- Gallery -->
  <Gallery gallery={gallery} />
  <!-- Additional  -->
  <AdditionalServices aditional_services={additional_services} />
  <!-- Contact -->
  <Contact />
  <!-- Coverage Areas -->
  <CoverageAreas coverage_areas={coverage_areas} />
</Base>
