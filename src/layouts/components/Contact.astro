---
import { Image } from "@astrojs/image/components";
import social from "@config/social.json"
import Social from "./Social.astro";
---

<section class="page-hero pb-6 pt-16">
  <div class="container">
    <h2 class="text-center">Contactanos</h2>
  </div>
</section>

<section class="section pt-0">
  <div class="container">
    <div class="flex gap-12">
      <div class="md:order-2">
        <h3>Ubicación</h3>
        <div class="p-12 mb-10 text-center md:mb-0 md:pt-9 shadow-xl rounded-xl">
          <div class="contact-img relative inline-flex pb-5 pl-5">
            <Image
              src="/images/contact-img.png"
              height={544}
              width={500}
              alt=""
            />
          </div>
        </div>
      </div>
      <div class="md:order-1">
        <h3>Formulario</h3>
        <div class="p-12 shadow-xl flex justify-center items-center py-12 rounded-xl">
          <form
            class="lg:max-w-[484px]"
            action="#"
            method="POST"
          >
            <div class="form-group mb-5">
              <label class="form-label" for="name">Nombre</label>
              <input
                class="form-control"
                type="text"
                id="name"
                placeholder="Your Full Name"
              />
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="eamil">Email</label>
              <input
                class="form-control"
                type="text"
                id="email"
                placeholder="Your  Email Address"
              />
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="eamil">Teléfono</label>
              <input
                class="form-control"
                type="text"
                id="email"
                placeholder="Your  Email Address"
              />
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="message">Mensaje</label>
              <textarea
                class="form-control h-[150px]"
                id="message"
                cols="30"
                rows="10"></textarea>
            </div>
            <input
              class="btn btn-primary-alt block w-full"
              type="submit"
              value="Enviar"
            />
          </form>
        </div>
      </div>
    </div>
    <div class="mt-12 flex flex-col items-center">
      <h4>Encuéntranos también en:</h4>
      <Social source={social} className="social-icons-main mt-4 lg:mt-6" />
    </div>
  </div>
</section>
